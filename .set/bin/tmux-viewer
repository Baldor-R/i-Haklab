	mkdir -p ~/.ssh
fi
if [ ! -e ~/.ssh/id_rsa ]; then
	ssh-keygen -t rsa -f ~/.ssh/id_rsa
fi
printf "$Y            [!]-> STEPS <-[!]$W\n"
