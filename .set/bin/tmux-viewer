#PREPARING
command -v ssh > /dev/null || { printf "$R\n[W]->$W server not found$R |$G Wait while install it$W\n"; apt install openssh -y > /dev/null; }
command -v tmate > /dev/null || { printf "$R\n[W]->$W viewer not found$R |$G Wait while install it$W\n"; pkg install tmate -y > /dev/null; }
